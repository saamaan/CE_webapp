<script>
$(function() {
  $("#introbtn").click(function() {
    $("#intro").hide('clip');
    $("#orientation").show('clip');
  });

  $("#orientationbtn").click(function() {
      $("#orientation").hide('clip');
      $("#membershipagreement").show('clip');
  });


  [% IF show_agreement %]
    $("#intro").hide();
    $("#orientation").hide();
    $("#membershipagreement").show();
  [% ELSE %]
    $("#intro").show();
    $("#orientation").hide();
    $("#membershipagreement").hide();
  [% END %]
});
</script>

