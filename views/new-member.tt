    <script>
        $(function() {
            $("#fname").focus(function() { $(this).val('') })
            $("#lname").focus(function() { $(this).val('') })
            var fillInName = function() {
                var name = "";
                var fname = $("#fname").val();
                var lname = $("#lname").val();
                if (typeof(fname) != 'undefined') {
                  if (typeof(lname) != 'undefined') {
                    name = fname + ' ' + lname;
                    $("#fullname").val(name);
                    $("#fullname2").val(name);
                  }
                }
            };
            $("#fname").blur(fillInName);
            $("#lname").blur(fillInName);
            fillInName();
        });
    </script>
